{{>header}}
{{>nav}}

<div class="container my-5">
    <form action="" method="post">

        {{#unless user}}
        <div class="alert alert-danger text-center">
            User not Fount
        </div>
        {{else}}
        <div class="form-group">
            <label for="">User ID</label>
            <input class="form-control w-75" name="id" value="{{user.id}}" disabled>
        </div>

        <div class="form-group">
            <label for="">User Name</label>
            <input class="form-control w-75" value="{{user.name}}" name="userName" placeholder="User Name">
        </div>

        <div class="form-group my-3">
            <label for="">User Age</label>
            <input class="form-control w-75" value="{{user.age}}" name="age" placeholder="User Age">
        </div>

        <div class="form-group">
            <input class="btn btn-warning" type="submit" value="Edit User">
        </div>
{{/unless}}
    </form>
</div>
{{>footer}}